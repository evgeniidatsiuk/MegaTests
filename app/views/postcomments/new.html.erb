<%= form_for @comment, url: post_postcomments_path(@post.id) do |f| %>

<% if @comment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@comment.errors.count, "error") %> </h2>
 
    <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  Comment: <%= f.text_area :body, size: "60x12" %><br />
  <%= f.submit "Create" %>
<% end %>